{% extends "components/vaultoro_tab.jinja" %}
{% set tab = 'settings' %}
{% block content %}
	<form action="{{ url_for('vaultoro_endpoint.settings')}}" method="POST" onsubmit="showPacman()">
		<input type="hidden" class="csrf-token" name="csrf_token" value="{{ csrf_token() }}"/>
		<div class="card" style="margin: 20px auto;">
			<h1 style="margin-bottom: 25px;">
			<img src="{{ url_for('vaultoro_endpoint.static', filename='img/Vaultoro-logo-white.svg') }}" height="30px">
			<br>
			<span style="font-size: 0.95em;">Configurations</span>
			</h1>
			<p style="text-align: center; margin-bottom: 5px; font-size: 1.15em;">Vaultoro Token:</p>
			<textarea id="vaultoro-token" name="vaultoro_token" placeholder="You'll need this to use the service">{{ vaultoro_token }}</textarea>
			<br>
            <p class="note">
			Check your Vaultoro <a href="https://trade.vaultoro.com/settings" target="_blank" style="color: #fff;">profile-page</a> to create a token.
			</p>
			<br>
            <div class="row">
				<button type="submit" class="btn" name="action" value="test_token">Test Vaultoro token</button>&nbsp;
				<button type="submit" class="btn" name="action" value="save">Save</button>
			</div>
		</div>
	</form>
{% endblock %}
{% block scripts %}
{% endblock %}
