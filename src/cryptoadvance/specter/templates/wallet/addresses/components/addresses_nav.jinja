{# 
    addresses_nav - Tabs menu to navigate between the wallet addresses Receive and Change screens.
    Parameters:
    - active_menuitem: Current active tab. Options: 'receive_addresses', 'change_addresses'.
	- wallet_alias: The wallet alias (used in the URL navigation).
 #}
{% macro addresses_nav(active_menuitem, wallet_alias) -%}
	<br>
    <nav class="row">
		<a 
			href="{{ url_for('wallets_endpoint.show_receive_addresses', wallet_alias=wallet_alias)}}"
			class="btn radio left {% if active_menuitem == 'receive_addresses' %}checked{% endif %}">
			Receive Addresses
		</a>
		<a 
			href="{{ url_for('wallets_endpoint.show_change_addresses', wallet_alias=wallet_alias)}}"
			class="btn radio right {% if active_menuitem == 'change_addresses' %}checked{% endif %}">
			Change Addresses
		</a>
	</nav>
{%- endmacro %}