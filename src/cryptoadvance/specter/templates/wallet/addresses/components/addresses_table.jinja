{# 
    addrs_table - Addresses table component
    Parameters:
    - specter: Specter instance
    - content: The content of the table (its rows)
#}
{% macro addresses_table(addresses, wallet_alias) -%}

    <table>
        <thead>
            <tr>
                <th></th>
                <th>Addresses</th>
                <th>Label</th>
                <th>Used</th>
                <th>UTXO</th>
                <th>Amount</th>
            </tr>
	    </thead>
        <tbody>

            {% for addr in addresses %}
            <tr class="{%if addr['addr_used'] == True %}unconfirmed{%endif%}">
                <td>#{{ addr['index'] }}</td>
                <td>{{ addr['address'] }}</td>
                <td><address-label data-address="{{ addr['address'] }}" data-label="{{ addr['label'] }}" data-wallet="{{ wallet_alias }}"></address-label></td>	
                <td>{%if addr['addr_used'] == True %}Yes{% else %}No{%endif%}</td>
                <td>{{ addr['utxo'] }}</td>
                <td>{{ addr['amount'] }}</td>
            </tr>
            {% endfor %}

	    </tbody>
    </table>
    <br />
{%- endmacro %}