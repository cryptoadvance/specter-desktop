{# 
    wallet_menu_item - Wallet navigation bar menu item.
    Parameters:
    - tab: The tab name.
    - title: The tab title.
    - wallet_alias: The wallet alias (used in the URL navigation).
    - active_menuitem: Current active tab name.
    - optional: is the tab supported for mobile.
    - isLeft: Is the item at the left edge (first item) of the navigation bar?
    - isRight: Is the item at the right edge (last item) of the navigation bar?
 #}
{% macro wallet_menu_item(tab, title, wallet_alias, active_menuitem, optional=false, isLeft=false, isRight=false) -%}
	<a 
        href="{{ url_for(tab, wallet_alias=wallet_alias)}}"
        class="btn radio {% if optional %}optional{% endif %} {% if isLeft %}left{% endif %} {% if isRight %}right{% endif %} {% if active_menuitem == tab %}checked{% endif %} {% if 'wallet_receive' == tab %}mobile-right{% endif %}">
        {{ title }}
    </a>
{%- endmacro %}
