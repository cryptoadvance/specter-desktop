{# 
    explorer_link - A link to block explorer/ copiable text if no explorer is defined
    Parameters:
    - type: An 'address', 'tx', or 'block'.
    - value: The address/ transaction id.
    - text: Text to display as the link inner text
    - explorer: The explorer saved in the settings
 #}
{% macro explorer_link(type, value, text, explorer) -%}
    {% if explorer %}
        <a target="_blank" class="explorer-link" href="{{ explorer }}{{ type }}/{{ value }}">{{ text }}</a>
    {% else %}
        <span class="explorer-link" id="explorer_link-{{ explorer }}{{ type }}/{{ value }}">{{ text }}</span>
        <script type="module">
            Specter.common.attachEventListener("explorer_link-{{ explorer }}{{ type }}/{{ value }}", "click", (event)=> {
                        Specter.common.copyText('{{ value }}', 'Copied {{ type }}: {{ value }}')
                    });  	
        </script>	 	        
    {% endif %}
{%- endmacro %}
